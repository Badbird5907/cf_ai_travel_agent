{
	"name": "travel-agent",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"deploy": "pnpm run build && wrangler deploy",
		"dev": "react-router dev",
		"postinstall": "npm run cf-typegen",
		"preview": "pnpm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"db:generate": "dotenv -e .dev.vars -- drizzle-kit generate",
		"db:migrate": "dotenv -e .dev.vars -- drizzle-kit migrate",
		"db:studio": "dotenv -e .dev.vars -- drizzle-kit studio",
		"db:push": "dotenv -e .dev.vars -- drizzle-kit push",
		"typegen": "react-router typegen && pnpm run cf-typegen"
	},
	"dependencies": {
		"@radix-ui/react-progress": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@tanstack/react-query": "^5.90.2",
		"@trpc/client": "^11.6.0",
		"@trpc/server": "^11.6.0",
		"@trpc/tanstack-react-query": "^11.6.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.44.5",
		"framer-motion": "^12.23.22",
		"isbot": "^5.1.27",
		"lucide-react": "^0.544.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.7.1",
		"tailwind-merge": "^3.3.1",
		"vite-plugin-string": "^1.2.3",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.0.12",
		"@cloudflare/workers-types": "^4.20250926.0",
		"@libsql/client": "^0.15.15",
		"@react-router/dev": "^7.7.1",
		"@tailwindcss/vite": "^4.1.4",
		"@types/node": "^20",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"dotenv": "^17.2.2",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.31.5",
		"tailwindcss": "^4.1.4",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.8.3",
		"vite": "^6.3.3",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.40.0"
	}
}
